		<x:bind nodeset="instance('ui_settings')/name/@futurevisible" relevant="instance('output-token')/data/metadata/isDelegated = 'true' and instance('output-token')/data/name/@visible = 'true'" />
		<x:bind nodeset="instance('ui_settings')/name/@futurereadonly" relevant="instance('output-token')/data/metadata/isDelegated = 'true' and ((instance('output-token')/data/name/@readonly = 'true' and instance('output-token')/data/name/@visible != 'true') or instance('output-token')/data/name/@visible = 'true')" />
	  	<x:bind nodeset="instance('output-token')/data/name" readonly="instance('output-token')/data/name/@readonly = 'true'"/>
		<x:bind nodeset="instance('ui_settings')/name" id="fade.name" relevant="not(instance('output-token')/data/name/@visible != 'true' and instance('output-token')/data/name/@readonly != 'true')" />
