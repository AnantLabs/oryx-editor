<bindings>
<x:instance id="ui_settings" xmlns="">
   <data>
		<delegationstate />
		<executionstate />
		<reviewstate />
        <delegatebutton />
		<interactbutton />
		<submitbutton />
		<reviewsubmitbutton />
        <cancelbutton />
        <delegatedfromform />
        <messageform />
        <deadlineform />
        <wantToReviewGroup />
        <delegategroup />
        <!-- <attribute futurereadonly="false" futurevisible="false" /> -->
   </data>
</x:instance>

		<!-- Describes metadata attributes and messages/deadlines -->
          <x:bind id="owner" nodeset="instance('output-token')/data/metadata/owner"/>
          <x:bind id="isDelegated" nodeset="instance('output-token')/data/metadata/isDelegated"/>
          <x:bind id="isReviewed" nodeset="instance('output-token')/data/metadata/isReviewed"/>
          <x:bind id="reviewRequested" nodeset="instance('output-token')/data/processdata/reviewRequested"/>
          <x:bind id="delegate" nodeset="instance('output-token')/data/metadata/delegate"/>
          <x:bind id="firstOwner" nodeset="instance('output-token')/data/metadata/firstOwner"/>
          <x:bind id="firstOwner.readonly" nodeset="instance('output-token')/data/metadata/firstOwner/@readonly"/>
          <x:bind id="message" nodeset="instance('output-token')/data/processdata/message"/>
          <x:bind id="messagereadonly" nodeset="instance('output-token')/data/processdata/message/@readonly"/>
          <x:bind id="deadline" nodeset="instance('output-token')/data/processdata/deadline"/>
          <x:bind id="deadlinereadonly" nodeset="instance('output-token')/data/processdata/deadline/@readonly"/>
          <x:bind id="delegatedfrom" nodeset="instance('output-token')/data/metadata/delegatedfrom"/>
          <x:bind id="wantToReview" nodeset="instance('output-token')/data/processdata/wantToReview" type="xsd:boolean"/>
          
          
		<!-- Describes Button Dependencies -->
		<x:bind nodeset="instance('ui_settings')/delegatebutton" relevant="instance('output-token')/data/metadata/isDelegated = 'true'" />
		<x:bind nodeset="instance('ui_settings')/cancelbutton" relevant="instance('output-token')/data/metadata/isDelegated = 'true'" />
        <x:bind nodeset="instance('ui_settings')/interactbutton" relevant="instance('output-token')/data/metadata/isDelegated != 'true' and instance('output-token')/data/metadata/isReviewed != 'true' and instance('output-token')/data/metadata/canBeDelegated = 'true'" />
		<x:bind nodeset="instance('ui_settings')/submitbutton" relevant="instance('output-token')/data/metadata/isDelegated != 'true' and instance('output-token')/data/processdata/reviewRequested != 'true'" />
		<x:bind nodeset="instance('ui_settings')/reviewsubmitbutton" relevant="instance('output-token')/data/metadata/isDelegated != 'true' and instance('output-token')/data/processdata/ReviewRequested = 'true'" />
		
		<!-- Describes Metadata bindings -->
		<x:bind nodeset="instance('ui_settings')/messageform" id="fade.message" relevant="instance('output-token')/data/metadata/isDelegated = 'true' or (instance('output-token')/data/metadata/isDelegated!='true' and instance('output-token')/data/processdata/message!='' and instance('output-token')/data/metadata/isReviewed!='true')" />
		<x:bind nodeset="instance('output-token')/data/processdata/message" readonly="instance('output-token')/data/metadata/isDelegated != 'true' and instance('output-token')/data/processdata/message/@readonly = 'true'" />
		<x:bind nodeset="instance('output-token')/data/processdata/message/@readonly" type="xsd:boolean" />
		<x:bind nodeset="instance('ui_settings')/deadlineform" id="fade.deadline" relevant="instance('output-token')/data/metadata/isDelegated = 'true' or (instance('output-token')/data/metadata/isDelegated!='true' and instance('output-token')/data/processdata/deadline!='' and instance('output-token')/data/metadata/isReviewed!='true')" />
		<x:bind nodeset="instance('output-token')/data/processdata/deadline" readonly="instance('output-token')/data/metadata/isDelegated != 'true' and instance('output-token')/data/processdata/message/@readonly = 'true'" />
		<x:bind nodeset="instance('output-token')/data/processdata/deadline/@readonly" type="xsd:boolean" />
		<x:bind nodeset="instance('ui_settings')/delegatedfromform" id="fade.delegatedfrom" relevant="instance('output-token')/data/metadata/isDelegated != 'true' and instance('output-token')/data/metadata/delegatedfrom != ''" />
		<x:bind nodeset="instance('output-token')/data/metadata/owner" readonly="instance('output-token')/data/metadata/owner/@readonly = 'true'" />
        <x:bind nodeset="instance('ui_settings')/wantToReviewGroup" id="wantToReviewGroup" relevant="instance('output-token')/data/metadata/isDelegated = 'true' and instance('output-token')/data/metadata/owner = ''" />
        <x:bind nodeset="instance('ui_settings')/delegategroup" relevant="instance('output-token')/data/metadata/isDelegated = 'true'"  />
        
        <!-- Describes states of formular -->
        <x:bind id="delegationstate" nodeset="instance('ui_settings')/delegationstate" relevant="instance('output-token')/data/metadata/isDelegated = 'true'" />
		<x:bind id="executionstate" nodeset="instance('ui_settings')/executionstate" relevant="instance('output-token')/data/metadata/isDelegated != 'true' and instance('output-token')/data/metadata/isReviewed != 'true'" />
		<x:bind id="reviewstate" nodeset="instance('ui_settings')/reviewstate" relevant="instance('output-token')/data/metadata/isDelegated != 'true' and instance('output-token')/data/metadata/isReviewed = 'true'" />
		
