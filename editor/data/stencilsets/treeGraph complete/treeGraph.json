{
	"title":"Tree Graph",
	"namespace":"http://b3mn.org/stencilset/treeGraph#",
	"description":"This is the specification of a tree graph (mainly for workshop purpose).",
 	"stencils" : [
  		{
			"type"		: "node",
			"id"		: "Diagram",
			"title"		: "Diagram",
			"groups"	: ["Tree Graph"],
			"description":"A Diagram",
			"view"		: "diagram.svg",
			"icon"		: "diagram.png",
			"mayBeRoot"	: true,
			"roles"		: [],
			"properties": [
				{
					"id"		: "title",
					"type"		: "String",
					"title"		: "Title",
					"value"		: "",
					"description":"",
					"tooltip"	: "",
					"readonly"	: false,
					"optional"	: true,
					"refToView"	: "",
					"length"	: "",
					"wrapLines"	: true
				}			
			]
		},		
		{
			"type"		: "node",
			"id"		: "Node",
			"title"		: "Node",
			"groups"	: ["Tree Graph"],
			"description":"A node.",
			"view"		:"node.svg",
			"icon"		:"node.png",			
			"roles"		: [],
			"properties": [		
				{
					"id"		: "title",
					"type"		: "String",
					"title"		: "Title",
					"value"		: "",
					"description":"",
					"tooltip"	: "",
					"readonly"	: false,
					"optional"	: true,
					"refToView"	: "text",
					"length"	: "",
					"wrapLines" :true
				},
				{
					"id"		: "bgColor",
					"type"		: "Color",
					"title"		: "Background Color",
					"description":"",
					"value"		: "#FFFFFF",
					"tooltip"	: "",
					"refToView" : "rect",
					"fill"		: true
				}						
			]
		},
		{
			"type"		: "edge",
			"id"		: "Edge",
			"title"		: "Edge",
			"description":"",
			"groups"	: ["Tree Graph"],
			"view"		: "connection.flow.svg",
			"icon"		: "flow.png",
			"roles": [],
			"properties": [				
				{
					"id"		: "label",
					"type"		: "String",
					"title"		: "Label",
					"value"		: "",
					"description":"",
					"tooltip"	: "",
					"readonly"	: false,
					"optional"	: true,
					"refToView"	: "text",
					"length"	: ""
				}							
			]
		}
	],	
	"rules": {
			"cardinalityRules": [ 
				{ 
					"role"		: "Node", 
					"outgoingEdges": [ 
										{ 
											"role":"Edge", 
											"maximum":2 
										} 
									],					
					"incomingEdges": [ 
										{ 
											"role":"Edge", 
											"maximum":1 
										} 
									] 
				}
			],
			"connectionRules": [
				{
					"role":"Edge",
					"connects": [
						{
							"from":"Node",
							"to":["Node"]
						}
					]
				}	
			],
			"containmentRules": [
				{
					"role":"Diagram",
					"contains": [
						"Edge",
						"Node"
					]
				}
			]
	}
}